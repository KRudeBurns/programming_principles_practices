{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "g++ build active file",
            "command": "g++",
            "args": [
                "-fdiagnostics-color=always",
                "-ggdb",
                "${file}",
                "--std=c++2a",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}